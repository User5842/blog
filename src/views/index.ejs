<!DOCTYPE html>
<html lang="en" prefix="og: https://ogp.me/ns#">
  <head>
    <base href="/" />
    <meta charset="UTF-8" />
    <meta name="description" content="Software musings and general thoughts" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="blog - Rafael Negron" />
    <meta property="og:type" content="blog.rafaeln" />
    <meta property="og:url" content="https://rafaeln.me" />
    <meta property="og:image" content="cube.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@100;400;900&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a9a4fd3c7d.js"
      crossorigin="anonymous"
    ></script>
    <link rel="shortcut icon" href="cube.ico" type="image/x-icon" />
    <link rel="stylesheet" href="styles/bundle.css" />
    <script src="../scripts/ui.js" defer></script>
    <title>blog - Rafael Negron</title>
  </head>
  <body>
    <main class="main">
      <header id="header">
        <div class="header__wrapper">
          <h1 class="header__heading">blog</h1>
          <div class="header__social">
            <a
              aria-label="GitHub"
              href="https://github.com/User5842"
              rel="noreferrer"
              target="_blank"
              title="GitHub"
            >
              <i class="fab fa-github-alt font__awesome"></i>
            </a>
            <a
              aria-label="LinkedIn"
              href="https://www.linkedin.com/in/rafaelnegron/"
              rel="noreferrer"
              target="_blank"
              title="LinkedIn"
            >
              <i class="fab fa-linkedin-in font__awesome"></i>
            </a>
            <a
              aria-label="Discord"
              href="https://discord.gg/S5R9ehA8t6"
              rel="noreferrer"
              target="_blank"
              title="Discord"
            >
              <i class="fab fa-discord font__awesome"></i>
            </a>
            <a
              aria-label="Resume"
              href="/files/Rafael-Negron-Resume.pdf"
              rel="noreferrer"
              target="_blank"
              title="Resume"
            >
              <i class="far fa-file font__awesome"></i>
            </a>
          </div>
        </div>
        <div class="header__controls">
          <form class="header__search">
            <i class="fas fa-search font__awesome-search"></i>
            <input
              class="header__search__input"
              name="search"
              placeholder="Find posts by query"
              type="text"
              required
            />
            <button class="header__search__submit">Find</button>
          </form>
          <select name="categories" id="category-select">
            <option value="">--Find a category--</option>
            <% categories.forEach(category => { %>
            <option value="<%= category %>"><%- category %></option>
            <% }); %>
          </select>
        </div>
      </header>
      <section class="main__posts">
        <% if (posts.length === 0) { %>
        <article class="main__post">
          <h1>It sure is empty around here...</h1>
        </article>
        <%} else { %> <% posts.forEach(post => { %>
        <article class="main__post">
          <% post.categories.forEach(category => { %>
          <span class="main__post__category"><%- category %></span>
          <% }); %>
          <p class="main__post__date"><%= post.date %></p>
          <%- post.post %>
        </article>
        <% }); %> <% } %>
      </section>
    </main>
  </body>
</html>
